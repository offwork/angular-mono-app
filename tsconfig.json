{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sda/api-interface": ["libs/api-interface/src/index.ts"],
      "@sda/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@sda/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@sda/shared/utility": ["libs/shared/utility/src/index.ts"],
      "@sda/slbot/feature-shell": ["libs/slbot/feature-shell/src/index.ts"],
      "@sda/slbot/features": ["libs/slbot/features/src/index.ts"],
      "@sda/shared/core": ["libs/shared/core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
